# ========================================================
# Docker Compose Environment Configuration Template
# Copy this file to .env and fill in the values
# ⚠️ Never commit .env to version control!
# ========================================================

# PostgreSQL
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=rag_db

# Neo4j
NEO4J_PASSWORD=your_neo4j_password

# MinIO (Object Storage)
MINIO_ROOT_USER=your_minio_user
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=your_minio_user
MINIO_SECRET_KEY=your_minio_password
MINIO_BUCKET=rag-docs

# JWT (at least 32 characters)
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# Azure OpenAI Configuration
AI_OPENAI_ENDPOINT=https://your-endpoint.services.ai.azure.com/models/chat/completions?api-version=2024-05-01-preview
AI_OPENAI_API_KEY=your_azure_openai_api_key_here
AI_OPENAI_DEPLOYMENT=DeepSeek-V3.2
AI_OPENAI_API_VERSION=2024-05-01-preview
