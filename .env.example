# ========================================================
# 数据库配置
# ========================================================
POSTGRES_DB=rag_db
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=your_postgres_password_here

# ========================================================
# MinIO 对象存储配置
# ========================================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=rag-docs

# ========================================================
# Kafka (Redpanda) 配置
# ========================================================
KAFKA_BOOTSTRAP=redpanda:9092
KAFKA_GROUP=rag-worker-group
KAFKA_TOPIC_INGEST=doc_ingest

# ========================================================
# Qdrant 向量数据库配置
# ========================================================
QDRANT_ENDPOINT=http://qdrant:6333

# ========================================================
# Azure OpenAI 配置 (RAG Worker 使用)
# ⚠️ 请勿将真实 API Key 提交到版本控制
# ========================================================
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-05-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_CHAT_DEPLOYMENT=your-chat-deployment-name
AZURE_OPENAI_CHAT_API_VERSION=2024-05-01-preview
AZURE_OPENAI_CHAT_ENDPOINT=https://your-endpoint.services.ai.azure.com

# ========================================================
# Neo4j 配置
# ========================================================
NEO4J_PASSWORD=your_neo4j_password_here

# ========================================================
# JWT 配置 (Spring Boot 使用)
# ⚠️ 生产环境请使用强密钥（至少32个字符）
# ========================================================
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# ========================================================
# Spring Boot 专用 Azure OpenAI 配置
# 用于 RAG API 的 LLM 调用
# ========================================================
AI_OPENAI_ENDPOINT=https://your-endpoint.services.ai.azure.com/models/chat/completions?api-version=2024-05-01-preview
AI_OPENAI_API_KEY=your_azure_openai_api_key_here
AI_OPENAI_DEPLOYMENT=DeepSeek-V3.2
AI_OPENAI_API_VERSION=2024-05-01-preview

# ========================================================
# 其他配置
# ========================================================
DEMO_MODE=false
